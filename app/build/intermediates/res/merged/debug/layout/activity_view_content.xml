<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/identifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/userinfoBG"
            android:paddingLeft="16dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/userinfo"
            android:textColor="@color/userindo"
            android:layout_weight="0.8"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/userinfoBG"
            android:paddingLeft="16dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/logout"
            android:textColor="@color/logouttext"
            android:clickable="true"
            android:onClick="SignOut"
            android:layout_weight="0.05"/>
    </LinearLayout>


    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:mcv_showOtherDates="all"
        app:mcv_selectionColor="#4e66f4"
        />
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/btnAdd"/>
    <TextView
        android:id="@+id/todayOT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/OTtoday"
        android:layout_margin="12dp"/>
    <TextView
        android:id="@+id/monthOT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/OTmonth"
        android:layout_margin="12dp"/>
</LinearLayout>
